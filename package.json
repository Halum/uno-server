{
  "name": "uno-server",
  "version": "0.8.10",
  "description": "This is a express server to serve as uno game back-end",
  "main": "index.js",
  "scripts": {
    "build": "cd client && npm install && npm run build && cd ..",
    "client": "npm start --prefix client",
    "client-build": "npm run build --prefix client",
    "client-install": "npm install --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon -L index.js",
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Halum/uno-server.git"
  },
  "keywords": [
    "uno",
    "mongo",
    "express",
    "game"
  ],
  "author": {
    "name": "Sajjad Hossain",
    "email": "my.lost.word@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Halum/uno-server/issues"
  },
  "homepage": "https://github.com/Halum/uno-server#readme",
  "dependencies": {
    "express": "latest",
    "randomstring": "^1.1.5",
    "shuffle-array": "^1.0.1",
    "socket.io": "2.2.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "latest"
  }
}
